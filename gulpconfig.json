{
  "deploy": {
    "files": {
      "manifest": {
        "name": "manifest.json",
        "path": "./dist/assets"
      },
      "templates": {
        "src": "./assets/javascript/**/*.html",
        "dest": "dist/assets",
        "config": {
          "root": "/"
        }
      },
      "css": {
        "src": "./assets/css/base.css",
        "dest": "./dist/assets/css"
      },
      "configjs": {
        "src": "./assets/config.js",
        "dest": "./dist/assets"
      },
      "javascript": {
        "src": [
          "./app/bower_components/angular/angular.js",
          "./app/bower_components/angular-cookies/angular-cookies.js",
          "./app/bower_components/angular-ui-utils/ui-utils.js",
          "./app/bower_components/angular-ui-router/release/angular-ui-router.js",
          "./app/bower_components/angular-resource/angular-resource.js",
          "./app/bower_components/checklist-model/checklist-model.js",
          "./app/bower_components/angular-xeditable/dist/js/xeditable.js",
          "./app/bower_components/ng-file-upload-shim/ng-file-upload-shim.js",
          "./app/bower_components/ng-file-upload/ng-file-upload.js",
          "./app/bower_components/angular-permission/dist/angular-permission.js",
          "./app/bower_components/sweetalert/dist/sweetalert.min.js",
          "./app/bower_components/angular-sweetalert/dist/ngSweetAlert.js",
          "./assets/javascript/**/*.js",
          "!./assets/javascript/**/*_test.js"
        ],
        "dest": "./dist/assets/javascript"
      },
      "images": {
        "src": [
          "./assets/images/**/*.jpg",
          "./assets/images/**/*.jpeg",
          "./assets/images/**/*.png"
          ],
        "dest": "./dist/assets/images"
      },
      "inject": {
        "files": [
          "./dist/assets/css/base*.css",
          "./dist/assets/config*.js",
          "./dist/assets/javascript/all*.js",
          "./dist/assets/templates*.js"
          ],
        "src": "./assets/html/index.html",
        "dest": "./dist",
        "config": {
          "ignorePath": "dist"
        }
      }
    }
  },
  "revision": {
    "src": {
      "assets": [
        "css/**/*.css",
        "javascript/**/*.js",
        "images/**/*"
      ],
      "base": "./assets"
    },
    "dest": {
      "assets": "./dist",
      "manifest": {
        "name": "manifest.json",
        "path": "./dist/assets"
      }
    }
  },
  "collect": {
    "src": [
      "./dist/assets/**/rev-manifest.json",
      "./dist/**/*.{html,xml,txt,json,css,js}"
    ],
    "dest": "./dist"
  }
}