{
  "sass": {
    "src": "./assets/sass/**/*.scss",
    "dest": "./assets/css",
    "sassLoadPath": [
      "./sass",
      "./app/bower_components/bootstrap-sass/assets/stylesheets"
    ]
  },
  "css": {
    "src": ["./assets/css/**/*.css"],
    "dest": "./app/assets/css"
  },
  "js": 
    [
      {
        "src": "./assets/config.js",
        "dest": "./app/assets",
        "concat": false
      },
      {
        "src": [
          "./app/bower_components/angular/angular.js",
          "./app/bower_components/angular-bootstrap/ui-bootstrap.min.js",
          "./app/bower_components/angular-bootstrap/ui-bootstrap-tpls.js",
          "./app/bower_components/angular-cookies/angular-cookies.js",
          "./app/bower_components/angular-ui-utils/ui-utils.js",
          "./app/bower_components/angular-ui-router/release/angular-ui-router.js",
          "./app/bower_components/angular-resource/angular-resource.js",
          "./app/bower_components/checklist-model/checklist-model.js",
          "./app/bower_components/angular-xeditable/dist/js/xeditable.js",
          "./app/bower_components/ng-file-upload-shim/ng-file-upload-shim.js",
          "./app/bower_components/ng-file-upload/ng-file-upload.js",
          "./app/bower_components/angular-permission/dist/angular-permission.js",
          "./app/bower_components/sweetalert/dist/sweetalert.min.js",
          "./app/bower_components/angular-sweetalert/dist/ngSweetAlert.js",
          "./app/bower_components/angular-loading-bar/build/loading-bar.min.js",
          "./assets/javascript/**/*.js",
          "!./assets/javascript/**/*_test.js"
          ],
        "dest": "./app/assets/javascript",
        "concat": true
      }
    ],
  "templates": {
    "src": ["./assets/javascript/**/*.html"],
    "dest": "./app",
    "root": "/"
  },
  "images": {
    "src": [
      "./assets/images/**/*.jpg",
      "./assets/images/**/*.jpeg",
      "./assets/images/**/*.png"
      ],
    "dest": "./app/assets/images"
  },
  "fonts": {
      "src": [
        "./assets/fonts/**/*"
      ],
      "dest": "./app/assets/fonts"
    },
  "injectHtml": {
    "files": [
      "./app/assets/css/base.css",
      "./app/assets/config.js",
      "./app/assets/javascript/all.js",
      "./app/templates.js"
    ],
    "src": "./assets/html/index.html",
    "dest": "./app",
    "config": {
      "ignorePath": "app"
    }
  },
  "watch": [
    {
      "src": "./assets/html/index.html",
      "tasks": ["inject-html"],
      "reload": true
    },
    {
      "src": [
        "./assets/javascript/**/*.js",
        "!./assets/javascript/**/*_test.js"
      ],
      "tasks": ["js"],
      "reload": true
    },
    {
      "src": "./assets/sass/**/*.scss",
      "tasks": ["sass"],
      "reload": false
    },
    {
      "src": "./assets/css/**/*.css",
      "tasks": ["css"],
      "reload": false,
      "stream": "./app/assets/css"
    },
    {
      "src": "./assets/javascript/**/*.html",
      "tasks": ["templates"],
      "reload": true
    },
    {
      "src": "./assets/fonts/**/*",
      "tasks": ["fonts"],
      "reload": true
    }
  ],
  "deploy": {
    "files": {
      "manifest": {
        "name": "manifest.json",
        "path": "./dist/assets"
      },
      "templates": {
        "src": "./assets/javascript/**/*.html",
        "dest": "dist/assets",
        "config": {
          "root": "/"
        }
      },
      "css": {
        "src": "./assets/css/base.css",
        "dest": "./dist/assets/css"
      },
      "configjs": {
        "src": "./assets/config.js",
        "dest": "./dist/assets"
      },
      "javascript": {
        "src": [
          "./app/bower_components/angular/angular.js",
          "./app/bower_components/angular-bootstrap/ui-bootstrap.min.js",
          "./app/bower_components/angular-bootstrap/ui-bootstrap-tpls.js",
          "./app/bower_components/angular-cookies/angular-cookies.js",
          "./app/bower_components/angular-ui-utils/ui-utils.js",
          "./app/bower_components/angular-ui-router/release/angular-ui-router.js",
          "./app/bower_components/angular-resource/angular-resource.js",
          "./app/bower_components/checklist-model/checklist-model.js",
          "./app/bower_components/angular-xeditable/dist/js/xeditable.js",
          "./app/bower_components/ng-file-upload-shim/ng-file-upload-shim.js",
          "./app/bower_components/ng-file-upload/ng-file-upload.js",
          "./app/bower_components/angular-permission/dist/angular-permission.js",
          "./app/bower_components/sweetalert/dist/sweetalert.min.js",
          "./app/bower_components/angular-sweetalert/dist/ngSweetAlert.js",
          "./app/bower_components/angular-loading-bar/build/loading-bar.min.js",
          "./assets/javascript/**/*.js",
          "!./assets/javascript/**/*_test.js"
        ],
        "dest": "./dist/assets/javascript"
      },
      "images": {
        "src": [
          "./assets/images/**/*.jpg",
          "./assets/images/**/*.jpeg",
          "./assets/images/**/*.png"
          ],
        "dest": "./dist/assets/images"
      },
      "fonts": {
        "src": [
          "./assets/fonts/**/*"
        ],
        "dest": "./dist/assets/fonts"
      },
      "inject": {
        "files": [
          "./dist/assets/css/base*.css",
          "./dist/assets/config*.js",
          "./dist/assets/javascript/all*.js",
          "./dist/assets/templates*.js"
          ],
        "src": "./assets/html/index.html",
        "dest": "./dist",
        "config": {
          "ignorePath": "dist"
        }
      }
    }
  },
  "revision": {
    "src": {
      "assets": [
        "css/**/*.css",
        "javascript/**/*.js",
        "images/**/*"
      ],
      "base": "./assets"
    },
    "dest": {
      "assets": "./dist",
      "manifest": {
        "name": "manifest.json",
        "path": "./dist/assets"
      }
    }
  },
  "collect": {
    "src": [
      "./dist/assets/**/rev-manifest.json",
      "./dist/**/*.{html,xml,txt,json,css,js}"
    ],
    "dest": "./dist"
  }
}